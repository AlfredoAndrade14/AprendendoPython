n = 1
while n != 0:
 
 a = int (input('Digite um valor para o primeiro termo'))
 b = int (input('Digite um valor para a razão de uma PA'))
 c = a + 10*b 
 for c in range (a, c,b):
  print (c)
 d = int (input('Você quer mostrar mais termos? [1] -- SIM e [2] -- NÃO'))
 if d == 0: 
   print ('Programa encerrado')
   break
